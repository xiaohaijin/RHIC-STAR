include ../make.inc
##############################################################################
#============================================================================
#	make			creates general library glib.a for 
#				MC generator and other programs
#	make combine.exe	creates program for combining histograms
#				in several storage files *.hst
#============================================================================
ARLIB1  =   glibk.a
all:	$(ARLIB1)
##############################################################################
##############################################################################
.f.o:
	$(F77) $(FFLAGS) -c $<
##############################################################################
GLK.f:	GLK.h
#============================================================================
OBJECT1 =  GLK.o  MathLib.o
$(ARLIB1): $(OBJECT1)
	$(AR) rv  $(ARLIB1) $(OBJECT1)
#============================================================================
COMMAND = combine.exe
OBJECTS = combine.o GLK.o
# Link procedure
$(COMMAND): $(OBJECTS)
	$(LD) -o $@ $(LDFLAGS) $(OBJECTS)
##############################################################################
clean:
	rm -f *.o *.a *~ *.exe lmap
##############################################################################



